{% extends 'main/base.twig' %}

{% block body %}

    {% block head %}
        <style>
            .cart-item { border-radius: .5rem; padding: 1rem; box-shadow: 0 1px 2px rgba(0,0,0,.04); }
            .product-image { width: 72px; height: 72px; object-fit: cover; border-radius: .25rem; }
            .summary-card { position: sticky; top: 1rem; }
            .muted-sm { font-size: .85rem; }
            .list-group-item { background: none; }
        </style>
    {% endblock %}

    <div class="row cart-page">
        <div class="col-12 mt-5 grid-margin stretch-card">
            <div class="card">
                <div class="container py-4">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h3 class="mb-0">Admin — Cart #<span id="cart-id">{{ cart.id }}</span></h3>
                        <small class="muted-sm">Customer: <span id="customer-name">{{ cart.user_id|customer_name }}</span> — <span id="cart-status">active</span></small>
                    </div>

                    <div class="row g-4">
                        <div class="col-lg-8">

                            {% for item in cart.items %}

                                {% set product = get_product(item.product_id) %}
                                {% set attribute = get_attribute(item.attribute_id) %}

                                <div id="items-list" class="list-group">

                                    <!-- Example item (READ ONLY) -->
                                    <div class="list-group-item cart-item d-flex gap-3 align-items-center" data-item-id="101">
                                        <img src="{{ product.getImages()[0] }}" alt="cover" class="product-image">
                                        <div class="flex-grow-1">
                                            <div class="d-flex justify-content-between align-items-start">
                                                <div>
                                                    <div class="fw-semibold">{{ product.getTitle }}</div>
                                                    <div class="muted-sm">SKU: {{ product.getSku}} • Variant: {{ attribute.getName }}</div>
                                                </div>
                                                <div class="text-end">
                                                    <div class="fw-bold"><span class="item-price">{{ get_amount_formatted(item.unit_price, cart.currency_code) }}</span></div>
                                                    <div class="muted-sm">per unit</div>
                                                </div>
                                            </div>

                                            <div class="d-flex align-items-center gap-2 mt-3">
                                                <div class="muted-sm">Quantity: <strong>{{ item.quantity }}</strong></div>
                                                <div class="ms-auto muted-sm">
                                                    Line total: <span class="item-line-total">{{ get_amount_formatted(item.total_price, cart.currency_code) }}</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </div>

                            {% endfor %}


                            <div class="mt-4">
                                <h6>Notes</h6>
                                <textarea oninput="saveNoteCart(this, {{ cart.id }})" class="form-control" rows="3" placeholder="Internal admin notes about this cart">{{ cart.note_data }}</textarea>
                            </div>

                        </div>

                        <div class="col-lg-4">
                            <div class="card summary-card">
                                <div class="card-body">
                                    <h5 class="card-title">Cart summary</h5>

                                    <div class="d-flex justify-content-between">
                                        <div class="muted-sm">Subtotal</div>
                                        <div><span id="summary-subtotal">{{ get_amount_formatted(cart.subtotal, cart.currency_code) }}</span></div>
                                    </div>

                                    <div class="d-flex justify-content-between mt-2">
                                        <div class="muted-sm">Shipping</div>
                                        <div>MWK <span id="summary-shipping">0.00</span></div>
                                    </div>

                                    {% set taxes = get_cart_taxes(cart.id) %}
                                    <br>
                                    <br>
                                    <h5 class="card-title">Cart Taxes</h5>

                                    {% for tax in taxes %}
                                        <div class="d-flex justify-content-between mt-2">
                                            <div class="muted-sm">{{ tax.name }} {{tax.rate }}%</div>
                                            <div>
                                                <span id="summary-tax">{{ get_amount_formatted(tax.amount, cart.currency_code) }}</span>
                                            </div>
                                        </div>
                                    {% endfor %}
                                    <hr>
                                    <div class="d-flex justify-content-between fw-bold">
                                        <div>Total</div>
                                        <div><span id="summary-total">{{ get_amount_formatted(cart_total(cart.id), cart.currency_code) }}</span></div>
                                    </div>

                                    <div class="mt-3 d-grid">
                                        <a href="/store/carts/{{ cart.id }}/delete" id="btn-delete-cart" class="btn btn-danger">Delete Cart</a>
                                    </div>
                                    <div class="mt-3 d-grid">
                                        <a href="/checkout/payment/{{ cart.id }}" id="btn-checkout-cart" class="btn btn-success">
                                            <i class="mdi mdi-shopping"></i>
                                            Place Order
                                        </a>
                                    </div>

                                    <div class="mt-3 muted-sm">
                                        Last updated: <span id="last-updated">—</span>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <script>
        function saveNoteCart(textarea, cartId) {
            const note = textarea.value || textarea.textContent;
            fetch(`/carts/${cartId}/item/note`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({note})
            });
        }
    </script>
{% endblock %}